@CHARSET "UTF-8";
.home-balance {
    margin-bottom: 50px;
}
.home-nav {
    margin-bottom: 40px;
    
}
.home-nav img {
    float: left;
    border-radius: 5px;
    margin-right: 12px;
    box-shadow: 0 0 12px 0 rgba(255, 103, 103, 0.5);
}
.home-nav div {
    float: left;
}
.home-nav div > h2 {
    margin: 5px 0 5px 0;
    font-size: 18px;
    color: #333333;
}
.home-nav div ul li {
    float: left;
    font-size: 14px;
    list-style: none;
    
}
.home-nav div ul li a {
    color: #999999;
    cursor: pointer;
    text-decoration: none;
}
.home-nav div ul li:last-child a {
    text-decoration: none;
    cursor: text;
}
.home-nav div ul > li + li:before {
    content: "/\00a0";
    padding: 0 5px;
    color: #ccc;
}
.change_suc:hover {
    background: #5dcf9e;
    color: #fff;
    transition: all .3s linear;
    -moz-transition: all .3s linear;
    -webkit-transition: all .3s linear;
}
.change_wro:hover {
    background: #f25555;
    color: #fff;
    transition: all .3s linear;
    -moz-transition: all .3s linear;
    -webkit-transition: all .3s linear;
}
.change_suc {
    display: block;
    width: 104px;
    height: 36px;
    border: 1px solid #5dcf9e;
    position: relative;
    cursor: pointer;
    float: right;
    line-height: 36px;
    vertical-align: middle;
    text-align: center;
    color: #5dcf9e;
    
}
.change_suc:hover, .change_wro:hover {
    text-decoration: none;
}
.change_wro {
    display: block;
    width: 104px;
    height: 36px;
    border: 1px solid #f25555;
    position: relative;
    cursor: pointer;
    float: right;
    line-height: 36px;
    vertical-align: middle;
    text-align: center;
    color: #f25555;
}
.alert {
    padding: 0;
    padding-bottom: 25px;
    border: 0;
    border-bottom: 1px solid #e5e5e5;
    margin-bottom: 25px;
    vertical-align: middle;
}
.alert img {
    margin-right: 20px;
}
.alert span {
    vertical-align: middle;
}
.alert > p + span {
    color: #999;
}
.alert > p {
    display: inline-block;
    margin-right: 30px;
    vertical-align: middle;
}
.alert > p img + span {
    font-size: 18px;
    color: #666;
}
.glyphicon {
    margin-right: 15px;
    font-size: 22px;
    white-space: nowrap;
    vertical-align: middle;
    margin-top: -3px;
}
.info-content {
    width: 70%;
    float: right;
    padding: 40px;
}
.close {
    font-size: 21px;
    font-weight: 700;
    line-height: 1;
    color: #000;
    text-shadow: 0 1px 0 #fff;
}
.modal-dialog {
    width: 402px;
}
.modal-body {
    padding: 0px 40px 40px;
    
}
.modal-header {
    padding: 20px;
    border-bottom: 0;
}
.modal-title {
    font-size: 18px;
    text-align: center;
    margin: 16px auto 9px;
    line-height: 1.0;
    color: #333;
}
.modal-content > p {
    padding: 15px;
    background: #ccc;
    font-size: 24px;
}
.form-control {
    height: 44px;
    padding-left: 25px;
    color: #b3b3b3;
    border: 1px solid #e5e5e5;
}
.submit {
    padding-left: 12px;
    font-size: 16px;
}
.form-group {
    margin-bottom: 20px;
}
#Verification-Code, #newVerification-Code {
    width: 180px;
    float: left;
    margin-right: 20px;
}
#message:hover {
    background: #f5f5f5;
    border-color: transparent;
}
#message, #newmessage, #new_email_message, #email_message, #crash_message {
    width: 120px;
    float: left;
    background: #fff;
    padding-left: 12px;
    text-align: center
}
.form-horizontal {
    padding: 20px 0 0 0;
    border-top: 1px solid #e5e5e5;
}
.list-group-item {
    overflow: hidden;
}
.list-group-item > span {
    float: left;
    width: 50%;
    text-align: center;
}
.list-head {
    font-weight: 900;
}
.getCode {
    background: #e6e6e6;
}
.getCode:hover {
    background: #fff;
    cursor: pointer;
}
.submit {
    background: #e65600;
    color: #fff;
    margin-top: 10px;
}
.submit:hover {
    background: #fd5f00;
}
.user-safe-wrap {
    padding: 40px;
}
.myRecord {
    margin-top: 40px;
}
.myRecord h2 {
    font-size: 16px;
    color: #333333;
    margin: 10px 0;
}
.border-box {
    border-bottom: 2px solid #ccc;
}
.panel {
    border-radius: 0;
}
.alert {
    border-radius: 0;
}
.form-control {
    border-radius: 0;
}
.modal-content {
    border-radius: 0;
    border: 0px;
}
.table {
    border: 1px solid #e5e5e5;
}
.table > thead > tr > th {
    height: 25px;
    line-height: 25px;
    font-weight: normal;
    font-size: 14px;
    background: #f9f9fb;
    text-align: center;
    border-bottom: 1px solid transparent;
}
.table > tbody > tr > td {
    border-top: transparent;
}
@media screen and (max-width:768px){
    
    .user-safe-wrap {
        padding: 15px;
    }
    .alert > p + span {
        display: none;
    }
    .modal-dialog {
        width: 90%;
        margin:10% auto;
    }
    .modal-header {
        padding: 5px;
        border-bottom: 0;
    }
    .modal-body {
        padding: 0px 10px 10px;
    }
    #Verification-Code, #newVerification-Code {
        width: 50%;
        margin-right:3%;
    }
    #message, #newmessage, #new_email_message, #email_message, #crash_message {
        width: 44%;
        margin-left:3%;
        padding-left: 12px;

    }
}
