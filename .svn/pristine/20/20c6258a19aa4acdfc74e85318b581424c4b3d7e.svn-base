input,
.panel {
    border-radius: 0 !important;
}
.identification .form-group {
    margin-bottom: 30px;
}
.identification .error {
    color: red;
}
.user-identity-wrap {
    padding: 40px;
}
.user-identity-wrap .identification {
    width: 80%;
    margin: 30px auto;
}
.user-identity-wrap .identification .form-control {
    height: 44px;
    width: 315px;
}
.user-identity-wrap .identification .col-sm-3 {
    font-weight: normal;
    color: #333333;
    font-size: 16px;
    padding-top: 10px;
}
.user-identity-wrap .verified {
    width: 449px;
    height: 253px;
    margin: 50px auto;
    padding: 30px;
    background-image: url('/public/images/identity_bg.png')
}
.user-identity-wrap .verified .verified-title {
    text-align: center;
    padding-bottom: 26px;
    font-size: 18px;
    font-weight: 700;
    color: #8D5050;
}
.user-identity-wrap .verified .form-group {
    margin-bottom: 10px;
}
.user-identity-wrap .verified label {
    width: 70px;
    font-weight: normal;
    color: #C39595;
    font-size: 14px;
    text-align: right;
}
.user-identity-wrap .verified span {
    font-weight: normal;
    color: #8d5050;
    font-size: 14px;
}
.user-identity-wrap .verified .already-auth {
    color: #43ba6b;
}

