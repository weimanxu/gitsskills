.identification .btn-verify {
    width: 100px;
    height: 44px;
    margin: 0;
    font-size: 14px;
    color: #FFFFFF;
    background-color: #e65600;
}
.identification .btn-verify:hover {
    color: #FFFFFF;
    background-color: #fd5f00;
}
.identification .btn-verify:focus {
    color: #FFFFFF;
    background-color: #e65600;
}
.upload-button {
    display: block;
    height: 123px;
    width: 145px;
    position: relative;
}
.upload-button img {
    height: 125px;
    width: 145px;
    position: absolute;
    top: 0;
    left: 0;
}
.upload-button svg {
    height: 34px;
    width: 34px;
    position: absolute;
    top: 45px;
    left: 54px;
    opacity: .8;
    z-index: 1;
}
.form-group .upload-identity {
    background: #fff;
    border: 1px dashed #ccc;
    display: inline-block;
    height: 155px;
    width: 147px;
    text-align: center;
}
.form-group .upload-identity p {
    background: #a4a4a4;
    color: #fff;
    font-size: 15px;
    margin-left: -1px;
    height: 31px;
    line-height: 31px;
    width: 147px;
}
.upload-example {
    display: inline-block;
    height: 155px;
    vertical-align: top;
    margin-left: 15px;
}
.picture-example {
    background: #a4a4a4;
    display: inline-block;
    vertical-align: top;
    height: 155px;
    width: 147px;
    text-align: center;
}
.example-intro {
    display: inline-block;
    margin-left: 20px;
    padding-top: 15px;
}
.example-intro h4 {
    color: #0b0b0b;
    font-size: 14px;
    font-weight: 700;
    height: 20px;
    line-height: 20px;
}
.example-intro p {
    color: #737373;
    height: 20px;
    line-height: 20px;
    margin-top: 5px;
}
.upload-button .file-upload {
    position: absolute;
    top: 0;
    left: 0;
    width: 145px;
    height: 125px;
    opacity: 0;
    z-index: 2;
}